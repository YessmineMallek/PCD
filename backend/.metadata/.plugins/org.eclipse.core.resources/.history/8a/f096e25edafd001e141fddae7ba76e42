version: "3"
services: 
  postgres_container:
    image: postgres
    network_mode: bridge
    expose:
      - 5432
    ports:
      - 5432:5432
    container_name: postgres_container
    environment:
      - POSTGRES_USER=postgres_container
      - POSTGRES_PASSWORD=mallek12
      - POSTGRES_DB=GTFS_Base
    volumes: 
      - C:\postgres_container_data:/var/lib/postgresql/data
    restart: always
  
  backend:
    network_mode: bridge
    build:
      dockerfile: Dockerfile
    container_name: train_container  
    expose:
      - 8080
    ports:
      - 8080:8080
    environment:
      -db-url: jdbc:postgresql://db:5432/GTFS_Base
      -db-username: postgres
      -db-password: mallek12
    depends_on: 
      - db 
    restart: always
      
    
      